<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/txtStrtemperature"
        android:layout_width="122dp"
        android:layout_height="68dp"
        android:layout_marginBottom="42dp"
        android:layout_marginEnd="136dp"
        android:layout_marginLeft="137dp"
        android:layout_marginRight="136dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="81dp"
        app:layout_constraintBottom_toTopOf="@+id/txtStrTem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/txtStrTem"
        android:layout_width="130dp"
        android:layout_height="54dp"
        android:layout_marginBottom="55dp"
        android:layout_marginEnd="132dp"
        android:layout_marginLeft="133dp"
        android:layout_marginRight="132dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="42dp"
        app:layout_constraintBottom_toTopOf="@+id/txtResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStrtemperature" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="124dp"
        android:layout_marginLeft="125dp"
        android:layout_marginRight="124dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="42dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStrTem" />

    <Button
        android:id="@+id/button2"
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginRight="148dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="31dp"
        android:text="ย้อนกลับ"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult" />
</android.support.constraint.ConstraintLayout>